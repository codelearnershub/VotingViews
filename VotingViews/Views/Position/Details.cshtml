@model VotingViews.DTOs.PositionDto

@{
    Layout = "_DashboardLayoutAdmin";
}

<div class="justify-content-center" style="max-width: 50%;
        box-sizing: border-box;
        box-shadow: 1px 2px 2px 1px rgba(0, 0, 0, 0.13);
        background-color:white;
        padding-left:20px;
        padding-bottom:20px;
        padding-top:20px;
        margin-top:1px;
        margin-left:auto;
        margin-right:auto;">

    <h4>Position Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            Position Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <div>
        @Html.ActionLink("Update", "Update", new { id = Model.Id }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

