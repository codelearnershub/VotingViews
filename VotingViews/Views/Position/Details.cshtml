@model VotingViews.Model.Entity.Position

@{
    ViewData["pageTitle"] = "Details";
    Layout = "_DashboardLayoutAdmin";
}

<div>
    <h4>PositionVM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @foreach (var contestants in Model.Contestants)
        {
            <dt class="col-sm-2">
                Contestants
            </dt>
            <dd class="col-sm-10">
               <a asp-action="Index" asp-controller="Contestant" asp-route-id="@contestants.Id">View</a>
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Update", "Update", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
