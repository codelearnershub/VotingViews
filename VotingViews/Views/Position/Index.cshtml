@model IEnumerable<VotingViews.DTOs.PositionDto>

@{
    ViewData["pageTitle"] = "List Of Positions";
    Layout = "_DashboardLayoutAdmin";
}


<div class="justify-content-center" style="        max-width: 70%;
        box-sizing: border-box;
        box-shadow: 1px 2px 2px 1px rgba(0, 0, 0, 0.13);
        background-color:white;
        margin-left:auto;
        margin-right:auto;">
    <p>
        <a asp-action="Create">+ Create New</a>
    </p>
    <table class="table table-active table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Election Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Election.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

