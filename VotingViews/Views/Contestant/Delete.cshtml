@model VotingViews.DTOs.ContestantDto

@{
    Layout = "_DashboardLayoutAdmin";
}



<div class="justify-content-center" style="max-width: 60%;
        box-sizing: border-box;
        box-shadow: 1px 2px 2px 1px rgba(0, 0, 0, 0.13);
        background-color:white;
        padding-left:20px;
        padding-right:20px;
        padding-bottom:20px;
        padding-top:20px;
        margin-top:1px;
        margin-left:auto;
        margin-right:auto;">
    <h3>Are you sure you want to delete this contestant?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
           First Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-4">
           Middle Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-4">
          Last Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-4">
          Gender
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-4">
            Email
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
