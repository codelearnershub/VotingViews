@model VotingViews.DTOs.VoterDto

@{
    Layout = "_DashboardLayoutVoter";
    ViewData["Title"] = "Profile";
}


<div class="justify-content-center" style="max-width: 50%;
        box-sizing: border-box;
        box-shadow: 1px 2px 2px 1px rgba(0, 0, 0, 0.13);
        background-color:white;
        padding-left:20px;
        padding-right:20px;
        padding-bottom:20px;
        padding-top:20px;
        margin-top:1px;
        margin-left:auto;
        margin-right:auto;">
    <h1>Your Profile</h1>
    <hr />
    <dl class="row columns" style"justify-content:center;">
        <dt class="col-sm-4">
            First Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-4">
            Last Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-4">
            Middle Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-4">
            Email
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-4">
            Home Address
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    <div>
        <a asp-action="DashBoard">Home</a>
        <a asp-action="Update" asp-route-id="@Model.Id">Update</a>
    </div>
</div>
