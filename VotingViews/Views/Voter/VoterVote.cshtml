@model IEnumerable<VotingViews.Model.Entity.Contestant>


@{
    Layout = "_DashboardLayoutVoter";
}



<div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Vote
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contestant in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => contestant.FullName)
                    </td>
                    <td>
                        <div class="form-check">

                                <a style="padding: 10px;" asp-action="Vote" asp-controller="Voter" asp-route-id="@contestant.Id" title="Upvote" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault">
                                    Vote
                                </a>
                           
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*<div class="form-group">
        <a asp-action="Vote" asp-controller="Voter" asp-route-id="" type="submit" value="Submit" class="btn btn-primary">Submit</a>
    </div>*@
</div>
