@model IEnumerable<VotingViews.DTOs.ContestantDto>


@{
    Layout = "_DashboardLayoutVoter";
}



<div class="justify-content-center" style="        max-width: 70%;
        box-sizing: border-box;
        box-shadow: 1px 2px 2px 1px rgba(0, 0, 0, 0.13);
        background-color:white;
        margin-left:auto;
        margin-right:auto;">

    <table class="table table-active table-hover">
        <thead>
            <tr>
                <th></th>
                <th class="col-6">
                    Name
                </th>
                <th>
                    Click Below To Vote
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contestant in Model)
            {
                <tr class="justify-content-center">
                    <th></th>
                    <td>
                        <img class="logo rounded-circle" style="height:50px; width:50px" src="~/contestants/@contestant.ItemPictureURL" />
                        @Html.DisplayFor(modelItem => contestant.FullName)
                    </td>
                    <td class="align-content-center" style="padding-left:10%">
                        <a asp-action="Vote" asp-controller="Voter" asp-route-contestantId="@contestant.Id" asp-route-positionId="@contestant.PositionId" title="Upvote" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault">
                            Vote
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*<div class="form-group">
            <a asp-action="Vote" asp-controller="Voter" asp-route-id="" type="submit" value="Submit" class="btn btn-primary">Submit</a>
        </div>*@
</div>
