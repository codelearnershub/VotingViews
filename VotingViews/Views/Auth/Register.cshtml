<div class=" wrap-login100">
    <div class="login100-form-title" style="background-image: url('/images/Image/voting3.jfif');">
        <span class="login100-form-title-1">
            Register
        </span>
    </div>
    <form class="login100-form validate-form" asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class=" wrap-input100 validate-input m-b-26">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <input asp-for="FirstName" class="form-control input100" type="text" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class=" wrap-input100 validate-input m-b-26">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <input asp-for="LastName" class="form-control input100" type="text" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class=" wrap-input100 validate-input m-b-26">
            <label asp-for="MiddleName" class="control-label">Middle Name</label>
            <input asp-for="MiddleName" class="form-control input100" type="text" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class=" wrap-input100 validate-input m-b-26">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control input100" type="text" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class=" wrap-input100 validate-input m-b-26">
            <label asp-for="Address" class="control-label">Address</label>
            <input asp-for="Address" class="form-control input100" type="text" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class=" wrap-input100 validate-input m-b-18">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control input100" type="text" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class=" wrap-input100 validate-input m-b-18">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control input100" type="text" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary login100-form-btn" />
            <div class="mb-4">
                Do You have an account? <a href="/auth/Login"> Login</a>
            </div>
        </div>
    </form>
    <a asp-action="Index"  asp-controller="Home" class="login100-form-btn">Back to Home Page</a>
</div>


